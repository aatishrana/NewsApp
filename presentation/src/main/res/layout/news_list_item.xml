<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

    <TextView
        android:id="@+id/news_list_item_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/news_list_item_tv_publisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_list_item_tv_title"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/news_list_item_tv_host_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_list_item_tv_publisher"
        android:layout_margin="4dp"/>

    <TextView
        android:id="@+id/news_list_item_tv_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/news_list_item_tv_host_name"
        android:layout_margin="4dp"/>

</RelativeLayout>